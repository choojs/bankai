{
  "name": "bankai",
  "version": "3.3.1",
  "description": "DIY asset server",
  "main": "index.js",
  "bin": {
    "bankai": "bin/index.js"
  },
  "scripts": {
    "deps": "dependency-check . && dependency-check . --extra --no-dev",
    "test": "npm run lint && npm run deps && NODE_ENV=test node test/index.js",
    "browser-test": "npm run lint && npm run deps && NODE_ENV=test node test/test-live.js",
    "lint": "standard",
    "test:cov": "npm run lint && npm run deps && NODE_ENV=test istanbul cover test/index.js"
  },
  "repository": "yoshuawuyts/bankai",
  "keywords": [
    "server",
    "dev",
    "development",
    "asset",
    "browserify",
    "sheetify",
    "html",
    "css",
    "js",
    "stream"
  ],
  "license": "MIT",
  "dependencies": {
    "bl": "^1.1.2",
    "bole": "^3.0.1",
    "browserify": "^13.1.0",
    "create-html": "^1.1.0",
    "css-extract": "^1.1.1",
    "errorify": "^0.3.1",
    "garnish": "^5.2.0",
    "get-server-port": "^1.0.0",
    "inject-lr-script": "^2.0.0",
    "meow": "^3.7.0",
    "mkdirp": "^0.5.1",
    "opn": "^4.0.2",
    "pump": "^1.0.1",
    "readable-stream": "^2.1.4",
    "resolve": "^1.1.7",
    "run-parallel": "^1.1.6",
    "serve-static": "^1.11.1",
    "server-router": "^3.0.0",
    "sheetify": "^5.0.5",
    "stacked": "^1.1.1",
    "stdout-stream": "^1.4.0",
    "string-to-stream": "^1.1.0",
    "tiny-lr": "^1.0",
    "watchify": "^3.7.0",
    "xtend": "^4.0.1"
  },
  "devDependencies": {
    "bluebird": "^3.4.6",
    "choo": "^3.2.0",
    "concat-stream": "^1.5.1",
    "dependency-check": "^2.6.0",
    "is-html": "^1.0.0",
    "istanbul": "^0.4.4",
    "openport": "0.0.4",
    "phantom": "^3.0.1",
    "request": "^2.75.0",
    "sinon": "^1.17.6",
    "standard": "^8.0.0",
    "tape": "^4.6.0"
  },
  "files": [
    "index.js",
    "bin/*",
    "lib/*",
    "client-hmr.js",
    "handler-*"
  ],
  "standard": {
    "ignore": [
      "test/fixtures/**"
    ]
  }
}
